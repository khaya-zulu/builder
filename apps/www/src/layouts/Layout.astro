---
import { ViewTransitions } from "astro:transitions"

import Discord from "../components/icons/Discord.astro";
import Github from "../components/icons/Github.astro";

import { Installation } from "../components/installation"

import Paper from "./worn-dots.png";

interface Props {
	title: string;
	navigateTo: "motivation" | "showcase";
}

const { title, navigateTo = "motivation" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body style={`background-image: url("${Paper.src}")`}>
		<main class="max-w-4xl p-10 mx-auto">
			<Installation client:visible />
	
			<h1 class="text-6xl text-zcool text-center">BuilderOS</h1>
			<p class="mt-3 text-center">The internet profile for developers everywhere.</p>
	
			<div class="flex mx-auto gap-4 items-center w-full justify-center mt-6">
				<a href="" rel="noopener noreferrer" target="_blank" class="rounded-full bg-gradient-to-br from-[#f0ccb9] to-[#ffba92] hover:to-[#f0ccb9] hover:from-[#ffba92] px-6 py-3 flex gap-4 items-center">
					<Discord className='w-5 h-5' />
					Discord
				</a>
				<a href="" rel="noopener noreferrer" target="_blank">
					<Github className="w-5 h-5" />
				</a>
				<div class="h-5 w-[1px] bg-slate-400" />
				<a class="underline w-20 text-center" href={navigateTo === "motivation" ? "/motivation" : "/"}>{navigateTo}</a>
			</div>

			<slot />
		</main>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Lato&family=ZCOOL+KuaiLe&display=swap');

	.text-zcool {
		font-family: 'ZCOOL KuaiLe', sans-serif;
	}
</style>
