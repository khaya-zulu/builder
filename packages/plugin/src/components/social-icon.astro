---
import RubberGrip from "../assets/rubber-grip.png"

import Twitter from "./icons/twitter.astro"
import Github from "./icons/github.astro"
import Linkedin from "./icons/linkedin.astro"

const icons = {
    twitter: {
        component: Twitter,
        className: "group-hover:animate-flap",
        style: "animation-fill-mode: forwards;"
    },
    linkedin: {
        component: Linkedin,
        className: "group-hover:animate-pulse",
        style: null
    },
    github: {
        component: Github,
        className: "group-hover:animate-float",
        style: null
    }
}


export type Props = {
    href: string;
    type: keyof typeof icons;
}

const { href, type } = Astro.props

const Component = icons[type].component as (props: { className: string; style: string | null }) => any
---


<a href={href} target="_blank" rel="noopener noreferrer" class="p-1 rounded-2xl shadow footer-icon">
    <div class="rounded-xl p-2 transition-all group overflow-hidden deep-inner-shadow text-slate-100" style={`background-image: url("${RubberGrip.src}")`}>
        <Component className={icons[type].className} style={icons[type].style} />
    </div>
</a>