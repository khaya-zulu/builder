---
    import SocialIcon from "../components/social-icon.astro";

    import { user } from "virtual:os/user-config"
---

<div class="flex mx-auto rounded-full py-2 px-8 gap-4 items-center border-2 footer footer-blur shadow-xl">
    <div class="w-14 h-14 rounded-full inline-block cover-loading">
        <img 
            src={user.avatar} alt="avatar" class="w-14 h-14 rounded-full"
            onload="this.parentElement?.classList.remove('cover-loading');"
        />
    </div>
    <div>
        <div>{user.name}</div>
        <div class="text-sm w-60 truncate">
            {user.description}
        </div>
    </div>
    
    {user.socials?.twitter ? <SocialIcon href={user.socials?.twitter} type="twitter" /> : null}
    {user.socials?.github ? <SocialIcon href={user.socials?.github} type="github" /> : null}
    {user.socials?.linkedin ? <SocialIcon href={user.socials?.linkedin} type="linkedin" /> : null}    
</div>

<style>
    .deep-inner-shadow {
        box-shadow: inset 0 2px 4px -2px rgba(0, 0, 0, 0.25)
    }

    .footer {
        border: 2px solid var(--os-footer-border-color);
        color: var(--os-footer-text-color);
    }

    .footer-blur {
        background: inherit;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        background-color: var(--os-footer-background-color);
	}
</style>